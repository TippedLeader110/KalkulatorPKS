<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.calculate.task.task.Hitung02_alb">

    <TextView
        android:id="@+id/hitung02_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Input data"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/hitung02_berat_contoh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hitung02_keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="18sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hitung02_berat_contoh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:text="Berat contoh"
            app:layout_constraintBottom_toTopOf="@id/hitung02_nkoh"
            app:layout_constraintEnd_toStartOf="@id/hitung02_p_berat_contoh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hitung02_nkoh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:text="N KOH"
            app:layout_constraintBottom_toTopOf="@id/hitung02_mlkoh"
            app:layout_constraintEnd_toStartOf="@id/hitung02_p_nkoh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hitung02_berat_contoh" />

        <TextView
            android:id="@+id/hitung02_mlkoh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:text="mL KOH"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hitung02_p_mlkoh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hitung02_nkoh" />

        <EditText
            android:id="@+id/hitung02_p_berat_contoh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="gram"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@id/hitung02_p_nkoh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hitung02_berat_contoh"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/hitung02_p_nkoh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@id/hitung02_p_mlkoh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hitung02_nkoh"
            app:layout_constraintTop_toBottomOf="@id/hitung02_p_berat_contoh" />

        <EditText
            android:id="@+id/hitung02_p_mlkoh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="mL"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hitung02_mlkoh"
            app:layout_constraintTop_toBottomOf="@id/hitung02_p_nkoh" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:drawableTop="@drawable/ic_baseline_done_24"
            android:background="@android:color/transparent"
            android:id="@+id/hitung02_btn_hitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/hitung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/hitung02_btn_hitung"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/hitung02_hasil_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hasil"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hitung02_hasil_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" = "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hitung02_hasil_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..........."
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>